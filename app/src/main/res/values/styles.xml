<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="EstiloBotonBase">
        <item name="android:textColor">@color/BlancoRoto</item>
        <item name="android:background">@drawable/fondo_boton</item>
        <item name="android:shadowColor">@color/Azure</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_marginLeft">@dimen/d5</item>
    </style>


    <style name="BotonMediano" parent="EstiloBotonBase">
        <item name="android:textSize">@dimen/d15</item>
    </style>
    <style name="BotonGrande" parent="EstiloBotonBase">
        <item name="android:textSize">@dimen/d30</item>
        <item name="android:background">@drawable/selector_boton</item>
        <item name="android:padding">@dimen/d15</item>
    </style>
</resources>
